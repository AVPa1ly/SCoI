@page
@model MyWebApp.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle">Create New</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Game) {
        <tr>
            <td>
                <img src="~/images/@item.Image" alt="NoImage" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GameGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GameId" class="btn btn-outline-info">
                    <span class="fas fa-edit"></span></a>
                <a asp-page="./Delete" asp-route-id="@item.GameId" class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
